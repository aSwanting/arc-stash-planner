# Server
PORT=8787
CACHE_TTL_MS=600000
API_RESPONSE_MAX_AGE_SEC=60
REQUEST_TIMEOUT_MS=30000
FUZZY_MATCH_THRESHOLD=0.93

# Enable sources: comma-separated list of ardb,metaforge,raidtheory,mahcks
ENABLED_SOURCES=metaforge

# Icon proxy (trim transparent padding + normalize to square)
ICON_PROXY_ENABLED=true
ICON_ALLOWED_HOSTS=cdn.metaforge.app
ICON_CACHE_TTL_MS=86400000
ICON_RESPONSE_MAX_AGE_SEC=86400
ICON_SIZE_PX=96
ICON_TRIM_THRESHOLD=10
ICON_INNER_SCALE=0.86

# ARDB
ARDB_ITEMS_URL=https://ardb.app/api/items

# MetaForge
METAFORGE_ITEMS_URL=https://metaforge.app/api/arc-raiders/items
METAFORGE_PAGE_SIZE=100
METAFORGE_INCLUDE_COMPONENTS=true
METAFORGE_DB_PATH=./data/metaforge.sqlite
METAFORGE_SYNC_INTERVAL_MS=21600000

# RaidTheory GitHub dataset
RAIDTHEORY_GITHUB_OWNER=RaidTheory
RAIDTHEORY_GITHUB_REPO=arcraiders-data
RAIDTHEORY_GITHUB_BRANCH=main
RAIDTHEORY_ITEMS_PATH=items
RAIDTHEORY_CONCURRENCY=20
RAIDTHEORY_MAX_ITEMS=0

# Optional Mahcks hosted API
MAHCKS_BASE_URL=https://arcdata.mahcks.com
MAHCKS_PAGE_SIZE=45
